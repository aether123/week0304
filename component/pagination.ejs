<div class="d-flex justify-content-center">
  <% let arr = []; arr.push('上一頁'); for (let i = 1; i <= 5; i++) {
  arr.push(i); } arr.push('下一頁'); %> <% for (let i = 0; i < arr.length; i++)
  { %>
  <ul class="d-flex">
    <li class="pagination-box">
      <a
        href="#"
        class="fs-sm-2 text-nowrap pagination-fs-1 d-block <%= (i==0 || i==arr.length-1)? 'pagination-pxy-1' :'pagination-pxy-2' %>"
        ><%= arr[i] %></a
      >
    </li>
    <% } %>
  </ul>
</div>
